<div class="row d-flex flex-column m-0 p-4">
  <h2 class="text-center mb-4">Resend Confirmation Instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row mb-4 justify-content-center field">
    <div class="col-lg-1">
      <%= f.label :email, class: "col-form-label" %>
    </div>
    <div class="col-lg-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
    <div class="actions col-lg-7 mt-1">
      <%= f.submit "Resend confirmation instructions", class: "btn px-4 my-4" %>
    </div>
  </div>

  <% end %>

  <div class="row justify-content-center">
    <div class="col-lg-7">
      <%= render "users/shared/links" %><br>
      <%= link_to 'Back to Home', restaurants_path %>
    </div>
  </div>

</div>
