<div class="row d-flex flex-column m-0 p-4">
  <h2 class="text-center mb-4">Sign Up</h2>

  <div class="d-flex flex-column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row mb-4 justify-content-center field">
      <div class="col-lg-2">
        <%= f.label :email, class: "col-form-label" %>
      </div>
      <div class="col-lg-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-4 justify-content-center field">
      <div class="col-lg-2">
        <%= f.label :password, class: "col-form-label" %>
      </div>
      <div class="col-lg-6">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="row mb-4 justify-content-center field">
      <div class="col-lg-2">
        <%= f.label :password_confirmation, class: "col-form-label" %>
      </div>
      <div class="col-lg-6">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn px-4 my-4" %>
        </div>
      </div>

    </div>
    <% end %>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <%= link_to 'Go To Login', new_user_session_path %> <br>
        <%= link_to 'Back to Home', restaurants_path %>
      </div>
    </div>
  </div>

</div>
