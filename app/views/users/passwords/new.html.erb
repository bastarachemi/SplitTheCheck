<div class="row d-flex flex-column m-0 p-4">
  <h2 class="text-center mb-4">Forgot Your Password?</h2>

  <div class="d-flex flex-column">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row mb-4 justify-content-center field">
      <div class="col-lg-1">
        <%= f.label :email, class: "col-form-label" %>
      </div>
      <div class="col-lg-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="actions col-lg-7 mt-1">
        <%= f.submit "Send me reset password instructions", class: "btn px-4 my-4" %>
      </div>
    </div>

    <% end %>

    <div class="row justify-content-center">
      <div class="col-lg-7">
        <%= link_to 'Back to Home', restaurants_path %>
      </div>
    </div>

  </div>
</div>
